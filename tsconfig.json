{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "es6",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "mtx",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "mtx": ["src/client/utils/mtx"],
      "mtx/*": ["src/client/utils/mtx/*"]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    ".eslintrc.js",
    "webpack.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}