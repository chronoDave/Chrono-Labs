{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",

    "jsx": "react",
    "jsxFactory": "mtx",
  
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
      
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "mtx": ["src/client/utils/mtx"]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    ".eslintrc.js",
    "webpack.config.js",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}