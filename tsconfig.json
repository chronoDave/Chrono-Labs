{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "es6",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "m",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "webpack.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}